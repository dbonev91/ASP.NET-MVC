@model WorkShop.Web.ViewModels.SkillViewModel

<div>
    <h3>@Model.Name</h3>
    <div id="endorcements-@Model.Id">
        <p>Endorcements: @Model.Endorsments</p>
        Endorcers: @Html.DisplayFor(x => x.Endorcers)
    </div>
</div>

@using (Ajax.BeginForm("EndorceUser", "Users", new { id = Model.Id }, new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = String.Format("endorcements-{0}", Model.Id)
}))
{
    @Html.AntiForgeryToken()

    <input type="submit" value="+" />
}